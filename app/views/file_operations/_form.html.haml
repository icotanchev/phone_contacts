= form_for @file_operation do |f|
  - if @file_operation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@file_operation.errors.count, "error")} prohibited this file_operation from being saved:"
      %ul
        - @file_operation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :file_path
    = f.text_field :file_path
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :job_class
    = f.text_field :job_class
  .field
    = f.label :user_type
    = f.text_field :user_type
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :info
    = f.text_area :info
  .actions
    = f.submit 'Save'
